@model ZorgApp2.ViewModel.BezoekPlanViewModel

@{
    ViewData["Title"] = "MaakBezoek";
}

<h1>Bezoek Plannen</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="UpdateBezoek">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Bezoek.Datum" class="control-label"></label>
                <input asp-for="Bezoek.Datum" class="form-control" />
                <span asp-validation-for="Bezoek.Datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bezoek.MedewerkerId" class="control-label"></label>
                <select asp-for="Bezoek.MedewerkerId" class="form-control" asp-items="ViewBag.MedewerkerId">
                    @foreach (Medewerker mw in Model.Medewerkers)
                    {
                        <option>@mw.Gebruikersnaam</option>
                    }
                </select>
            </div>
            <!--Planner.Id komt met de BezoekPlanViewModel data mee-->
            <input type="hidden" asp-for="Bezoek.PlannerId" />
            <div class="form-group">
                <label asp-for="Bezoek.KlantId" class="control-label"></label>
                <select asp-for="Bezoek.KlantId" class="form-control" asp-items="ViewBag.KlantId">
                    @foreach (Klant klant in Model.Klanten)
                    {
                        <option>@klant.Naam</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Bezoek Plannen" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<form method="post">
    <input type="hidden" asp-for="Bezoek.Id" />
    <input type="hidden" asp-for="Bezoek.KlantId" />
    <input type="submit" value="selecteer Klant" asp-action="KlantDoorgeven" />
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts{
    <script src="//cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTableH').DataTable();
        });
    </script>
}
