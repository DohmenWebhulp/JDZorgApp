<div class="row">
    <div class="col-md-12">
        <table id="mytableH">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Omschrijving
                    </th>
                    <th>
                        Extra_info
                    </th>
                    <th>
                        Uitgevoerd?
                    </th>
                    <th>
                        Verwijderen
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Handeling handeling in Model.Bezoek.Handelingen)
                {
                    <tr>
                        <td>
                            @handeling.Id
                        </td>
                        <td>
                            @handeling.Taak.Omschrijving
                        </td>
                        <td>
                            @handeling.Taak.Extra_info
                        </td>
                        <td>
                            @handeling.Uitvoering
                        </td>
                        <td>
                            @using (Html.BeginForm("VerwijderHandeling", "Bezoek", new { id = handeling.Id }))
                            {
                                <input type="submit" value="Verwijderen" class="btn btn-secondary" />
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>