@model ZorgApp2.Models.Taak

@{
    ViewData["Title"] = "EditTaak";
}

<form method="post" asp-action="UpdateTaak">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>NAW Gegevens</h1>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Omschrijving" class="control-label"></label>
                    <input asp-for="Omschrijving" class="form-control" />
                    <span asp-validation-for="Omschrijving" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Extra_info" class="control-label"></label>
                    <input asp-for="Extra_info" class="form-control" />
                    <span asp-validation-for="Extra_info" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div style="margin-top: 130px">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-3">
                    <input type="submit" value="Verwijderen" asp-action="VerwijderTaak"
                           class="btn btn-danger" style="margin: 20px; width: 100%" />
                </div>
                <div class="col-md-3">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Opslaan" asp-action="UpdateTaak"
                           class="btn btn-primary" style="margin: 20px; width: 100%" />
                </div>
            </div>
        </div>
    </div>
</form>

