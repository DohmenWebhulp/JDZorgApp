@model IEnumerable<ZorgApp2.Models.Medewerker>

@{
    ViewData["Title"] = "Index";
}

@section Styles{
    <link rel="stylesheet" href="~/lib/datatables/datatables.css" />
}
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h1 style="margin-bottom: 50px">Beheer Medewerkers</h1>
        <table id="myTableM">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Gebruikersnaam)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gebruikersnaam)
                        </td>
                        <td>
                            <a asp-action="EditMedewerker" asp-route-id="@item.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
        <div class="row">
            <div class="col-md-9"></div>
            <div class="col-md-3">
                <div style="margin-top: 350px">
                    <form method="post">
                        <button asp-action="ToevoegenMedewerkerForm" type="submit" class="btn btn-primary"
                                style="width: 95%">
                            Medewerker Toevoegen
                        </button>
                    </form>
                </div>
            </div>
        </div>
        @section Scripts{
            <script src="~/lib/datatables/datatables.js"></script>
            <script>
                $(document).ready(function () {
                    $('#myTableM').DataTable();
                });
            </script>
        }
